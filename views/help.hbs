<div class="container">
    <div class="text-center py-5">
        <h3 class="mb-4">Login help</h3>
        {{#if succesMessage}}
        <div class="alert alert-success mt-2" role="alert">
            {{succesMessage}}
        </div>
        {{/if}}
        {{#if errorMessage}}
        <div class="alert alert-danger mt-2" role="alert">
            {{errorMessage}}
        </div>
        {{/if}}
        <div class="row">
            <div class="card bg-light m-3" style="max-width: 28rem;">
                <div class="card-header">Forgot your password?</div>
                <div class="card-body">
                    <h1 class="card-title"><i class="fas fa-key"></i></h1>
                    <p class="card-text">Type your e-mail to start password reset process. Remember to check spam folder.</p>
                    <form class="pt-3" action="/login/help" method="POST">
                    <input type="text" name="reset" value="true" hidden>
                        <div class="row mb-3 d-flex justify-content-center">
                            <label for="inputUsername" class="col-sm-4
                                col-form-label">E-mail</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control"
                                    id="inputUsername"
                                    name="email" value="{{user.email}}" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark mt-3 mb-3">Reset password</button>
                    </form>
                </div>
            </div>
            <div class="card bg-light m-3" style="max-width: 28rem;">
                <div class="card-header">Lost your activation e-mail?</div>
                <div class="card-body">
                    <h1 class="card-title"><i class="far fa-envelope"></i></h1>
                    <p class="card-text">Type your e-mail to receive your activation link again. Remember to check spam folder.</p>
                    <form class="pt-3" action="/login/help" method="POST">
                    <input type="text" name="forgot" value="true" hidden>
                        <div class="row mb-3 d-flex justify-content-center">
                            <label for="inputUsername" class="col-sm-4
                                col-form-label">E-mail</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control"
                                    id="inputUsername"
                                    name="email" value="{{user.email}}" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark mt-3 mb-3">Re-send verification mail</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="mb-5">
            <a href="/register"><button class="btn btn-outline-dark m-3">Go
                    back to register page</button></a>
            <a href="/login"><button class="btn btn-outline-dark m-3">Go
                    back to log-in page</button></a>
        </div>
    </div>
</div>